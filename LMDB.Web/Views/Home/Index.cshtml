@{
    ViewBag.Title = "Home Page";
    var posters = ViewBag.Posters;
}

@Styles.Render("~/Styles/Carousel.css")

<body>
    <h1><i>Welcome to LMDB!</i></h1>
    @if (!User.Identity.IsAuthenticated)
    {
        <h3><i>Please Login or Register</i></h3>
    } 
    <div id="wrapper">
        <div id="image">
            <div class="image i1"><img src="@posters[0]"></div>
            <div class="image i2"><img src="@posters[1]"></div>
            <div class="image i3"><img src="@posters[2]"></div>
            <div class="image i4"><img src="@posters[3]"></div>
            <div class="image i5"><img src="@posters[4]"></div>
            <div class="image i6"><img src="@posters[5]"></div>
            <div class="image i7"><img src="@posters[6]"></div>
            <div class="image i8"><img src="@posters[7]"></div>
        </div>
    </div>
</body>